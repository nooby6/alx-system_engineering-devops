#!/usr/bin/env bash
# This script displays different messages based on the loop iteration

# Initialize a counter variable
counter=1

# Use a while loop to iterate from 1 to 10
while [ $counter -le 10 ]
do
    # Use if, elif, and else statements to display different messages based on the iteration
    if [ $counter -eq 4 ]
    then
        # Display "bad luck" for the 4th iteration
        echo "bad luck"
    elif [ $counter -eq 8 ]
    then
        # Display "good luck" for the 8th iteration
        echo "good luck"
    else
        # Display "Best School" for other iterations
        echo "Best School"
    fi

    # Increment the counter
    ((counter++))
done
