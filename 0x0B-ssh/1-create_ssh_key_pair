#!/usr/bin/env bash

# Bash script to create an RSA key pair with specific requirements

# Create RSA key pair
ssh-keygen -t rsa -b 4096 -C "Generated key for school" -f ~/.ssh/school

# Add passphrase to private key
echo "betty" | ssh-keygen -p -P "" -N "" -f ~/.ssh/school

# Display success message
echo "RSA key pair created successfully."
